<UserControl x:Class="BubbleStart.Views.EconomicData_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Converters="clr-namespace:BubbleStart.Converters"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:helpers="clr-namespace:BubbleStart.Helpers"
             xmlns:viewmodels="clr-namespace:BubbleStart.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type viewmodels:EconomicData_ViewModel}}"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="650"
             d:DesignWidth="1500">
    <UserControl.Resources>
        <Converters:FloadToStringValueConverter x:Key="FtoSConverter" />
        <Converters:RowToIndexConverter x:Key="RowToIndexConverter" />
        <Converters:BoolToShowedUp_Converter x:Key="BoolToShowedUp_Converter" />
        <Converters:BoolToGreekStringConverter x:Key="BoolToGreekStringConverter" />
        <Converters:DateTimeToString x:Key="DateTimeToString" />
        <Converters:GroupExpenseToHeaderConverter x:Key="GroupExpenseToHeaderConverter" />
        <Converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
        <Converters:EnumConverter x:Key="EnumConverter" />
        <Style x:Key="DataGridCellStyle"
               TargetType="{x:Type DataGridCell}">
            <Setter Property="IsTabStop"
                    Value="False" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Έσοδα-Έξοδα">
                <ScrollViewer VerticalScrollBarVisibility="Disabled"
                              HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <GroupBox Header="Έσοδα"
                                  d:Visibility="Visible"
                                  Visibility="{Binding ConverterParameter=1, Converter={StaticResource UserToVisibilityConverter}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Aπό:"
                                               Margin=" 5 0 0 5" />
                                        <DatePicker VerticalAlignment="Center"
                                                    Margin="5,0"
                                                    SelectedDate="{Binding StartDateCash,  UpdateSourceTrigger=PropertyChanged}" />
                                        <Label Content="Έως:"
                                               Margin=" 5 0 0 5" />
                                        <DatePicker VerticalAlignment="Center"
                                                    Margin="5,0"
                                                    SelectedDate="{Binding EndDateCash, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Grid.Row="0"
                                               VerticalAlignment="Bottom"
                                               Content="Τύπος:"
                                               Margin=" 5 0 0 5" />
                                        <ComboBox  Width="80"
                                                   VerticalAlignment="Bottom"
                                                   Margin=" 5 0 0 5"
                                                   SelectedIndex="{Binding SelectedProgramModeIndex}">
                                            <ComboBox.Resources>
                                                <CollectionViewSource x:Key="CityList"
                                                                      Source="{Binding Source={helpers:EnumBindingSource {x:Type helpers:ProgramMode}}}" />
                                            </ComboBox.Resources>
                                            <ComboBox.ItemsSource>
                                                <CompositeCollection>
                                                    <ComboBoxItem Content="Όλοι" />
                                                    <CollectionContainer Collection="{Binding Source={StaticResource CityList}}" />
                                                </CompositeCollection>
                                            </ComboBox.ItemsSource>
                                        </ComboBox>
                                        <Label Margin=" 5 0 0 5"
                                               VerticalAlignment="Bottom"
                                               Content="Τρόπος:" />
                                        <ComboBox SelectedIndex="{Binding SelectedProgramCountIndex}"
                                                  VerticalAlignment="Bottom"
                                                  Margin=" 5 0 0 5"
                                                  Width="70">
                                            <ComboBoxItem>ΟΛΟΙ</ComboBoxItem>
                                            <ComboBoxItem>Μήνας</ComboBoxItem>
                                            <ComboBoxItem>Συνεδρίες</ComboBoxItem>
                                        </ComboBox>
                                        <Button Content="Προβολή"
                                                Margin="5"
                                                VerticalAlignment="Bottom"
                                                Command="{Binding ShowCashDataCommand}" />
                                    </StackPanel>
                                </StackPanel>
                                <DataGrid ItemsSource="{Binding DailyPayments}"
                                          Grid.Row="1"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          Width="515"
                                          CanUserDeleteRows="False"
                                          AutoGenerateColumns="False">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="{x:Type DataGridRow}">
                                            <EventSetter Event="MouseDoubleClick"
                                                         Handler="ListView_MouseDoubleClick" />
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Όνομα"
                                                            Width="90"
                                                            Binding="{Binding Customer.Name}" />
                                        <DataGridTextColumn Header="Επίθετο"
                                                            Width="100"
                                                            Binding="{Binding Customer.SureName}" />
                                        <DataGridTextColumn Header="Ποσό"
                                                            Width="60"
                                                            Binding="{Binding Amount,StringFormat=c2}" />
                                        <DataGridTextColumn Header="Ημερομ."
                                                            Width="65"
                                                            Binding="{Binding Date, Converter={StaticResource DateTimeToString},ConverterParameter='dd/MM/yy'}" />
                                        <DataGridCheckBoxColumn Header="Απ."
                                                                Width="30"
                                                                Binding="{Binding Reciept}" />
                                        <DataGridTextColumn Header="Τρόπος"
                                                            Width="65"
                                                            Binding="{Binding PaymentType, Converter={StaticResource EnumConverter}}" />
                                        <DataGridTextColumn Header="Αγορά"
                                                            Width="95"
                                                            Binding="{Binding Program}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="2">
                                    <Label Content="Σύνολο Εσόδων:" />
                                    <Label Content="{Binding Sum, Converter={StaticResource FtoSConverter}}" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <TabControl Grid.Column="1">
                            <TabItem Header="Έξοδα"
                                     Padding="15 0">
                                <Grid Margin="5 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                d:Visibility="Visible"
                                                Visibility="{Binding ConverterParameter=2, Converter={StaticResource UserToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="Aπό:" />
                                            <DatePicker VerticalAlignment="Center"
                                                        Width="100"
                                                        PreviewKeyDown="DatePicker_KeyDown"
                                                        SelectedDate="{Binding StartDateExpenses , StringFormat='dd/MM/yyyy'}" />
                                        </StackPanel>
                                        <StackPanel Margin=" 5 0 0 5">
                                            <TextBlock Text="Έως:" />
                                            <DatePicker VerticalAlignment="Center"
                                                        Width="100"
                                                        PreviewKeyDown="DatePicker_KeyDown"
                                                        SelectedDate="{Binding EndDateExpenses,StringFormat='dd/MM/yyyy'}" />
                                        </StackPanel>
                                        <Button Content="Προβολή"
                                                Margin="5"
                                                IsDefault="True"
                                                VerticalAlignment="Bottom"
                                                Command="{Binding ShowExpensesDataCommand}" />
                                        <TextBox Width="120"
                                                 VerticalAlignment="Bottom"
                                                 Margin="5"
                                                 Height="21"
                                                 Text="{Binding ExpensesTextFilter,UpdateSourceTrigger=PropertyChanged}" />
                                        <Button Content="Αντικατάσταση"
                                                Margin="5"
                                                IsDefault="True"
                                                VerticalAlignment="Bottom"
                                                Command="{Binding FindAndReplaceCommand}" />
                                        <TextBox Width="120"
                                                 VerticalAlignment="Bottom"
                                                 Margin="5"
                                                 Height="21"
                                                 Text="{Binding Find,UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox Width="120"
                                                 VerticalAlignment="Bottom"
                                                 Margin="5"
                                                 Height="21"
                                                 Text="{Binding Replace,UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                    <DataGrid ItemsSource="{Binding Expenses}"
                                              Grid.Row="1"
                                              d:Visibility="Visible"
                                              Visibility="{Binding ConverterParameter=2, Converter={StaticResource UserToVisibilityConverter}}"
                                              CanUserAddRows="False"
                                              SelectedItem="{Binding SelectedExpense}"
                                              IsReadOnly="False"
                                              Width="1126"
                                              CanUserDeleteRows="False"
                                              AutoGenerateColumns="False">
                                        <DataGrid.Resources>
                                            <ContextMenu x:Key="expensesContextMenu">
                                                <MenuItem Header="Διαγραφή"
                                                          Command="{Binding DataContext.DeleteExpenseCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                            </ContextMenu>
                                        </DataGrid.Resources>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="{x:Type DataGridRow}">
                                                <Setter Property="ContextMenu"
                                                        Value="{StaticResource expensesContextMenu}" />
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ποσό"
                                                                Width="80"
                                                                Binding="{Binding Amount,StringFormat=c2,UpdateSourceTrigger=PropertyChanged}" />
                                            <DataGridTextColumn Header="Ημερομ."
                                                                Width="70"
                                                                Binding="{Binding Date,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeToString},ConverterParameter='dd/MM/yy'}" />
                                            <DataGridTemplateColumn Header="Κατηγ."
                                                                    Width="95"
                                                                    SortMemberPath="MainCategory.Name"
                                                                    CellStyle="{StaticResource DataGridCellStyle}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox Width="Auto"
                                                                  VerticalAlignment="Top"
                                                                  DisplayMemberPath="Name"
                                                                  ItemsSource="{Binding DataContext.MainCategories,RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                                  SelectedItem="{Binding MainCategory, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Υποκατηγ."
                                                                    SortMemberPath="SecondaryCategory.Name"
                                                                    Width="125"
                                                                    CellStyle="{StaticResource DataGridCellStyle}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox Width="Auto"
                                                                  VerticalAlignment="Top"
                                                                  DisplayMemberPath="Name"
                                                                  ItemsSource="{Binding SecondaryCategories}"
                                                                  SelectedItem="{Binding SecondaryCategory, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Επιχείριση"
                                                                    SortMemberPath="SecondaryCategory.Store"
                                                                    Width="110"
                                                                    CellStyle="{StaticResource DataGridCellStyle}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox Width="Auto"
                                                                  VerticalAlignment="Top"
                                                                  ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type helpers:Stores}}}"
                                                                  SelectedItem="{Binding SelectedStore, UpdateSourceTrigger=PropertyChanged}">
                                                            <ComboBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding}"
                                                                               HorizontalAlignment="Right" />
                                                                </DataTemplate>
                                                            </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridCheckBoxColumn Header="Παραστ."
                                                                    Binding="{Binding Reciept,UpdateSourceTrigger=PropertyChanged}" />
                                            <DataGridTextColumn Header="Χρήστης"
                                                                MaxWidth="120"
                                                                IsReadOnly="True"
                                                                Binding="{Binding User.Name}" />
                                            <DataGridTemplateColumn Header="Αιτιολογία"
                                                                    Width="270">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Label Visibility="{Binding ShowBankCash}"
                                                                   Content="Bank:" />
                                                            <TextBox Grid.Column="1"
                                                                     Visibility="{Binding ShowBankCash}"
                                                                     Text="{Binding Bank,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource FtoSConverter}}" />
                                                            <Label Content="Cash:"
                                                                   Visibility="{Binding ShowBankCash}"
                                                                   Grid.Column="2" />
                                                            <TextBox Grid.Column="3"
                                                                     Margin="0,0,5,0"
                                                                     Visibility="{Binding ShowBankCash}"
                                                                     Text="{Binding Cash,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource FtoSConverter}}" />
                                                            <TextBox VerticalAlignment="Top"
                                                                     Grid.Row="1"
                                                                     Grid.ColumnSpan="4"
                                                                     TextWrapping="Wrap"
                                                                     Margin="5,0"
                                                                     MaxHeight="60"
                                                                     Text="{Binding Reason,UpdateSourceTrigger=PropertyChanged}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Από"
                                                                    SortMemberPath="From"
                                                                    Width="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <DatePicker VerticalAlignment="Top"
                                                                    SelectedDate="{Binding From,UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Έως"
                                                                    SortMemberPath="To"
                                                                    Width="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <DatePicker VerticalAlignment="Top"
                                                                    SelectedDate="{Binding To,UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <GroupBox Grid.Row="2"
                                              Header="Προσθήκη Εξόδου">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel>
                                                    <TextBlock Text="Ημερομηνία:" />
                                                    <DatePicker VerticalAlignment="Bottom"
                                                                Width="120"
                                                                SelectedDate="{Binding NewExpense.Date,  UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>
                                                <StackPanel Margin=" 40 5 0 0"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Top">
                                                    <TextBlock Text="Ποσό:"
                                                               Width="50" />
                                                    <TextBox Text="{Binding NewExpense.Amount,Converter={StaticResource FtoSConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Row="1">
                                                <StackPanel>
                                                    <TextBlock Text="Από:" />
                                                    <DatePicker VerticalAlignment="Bottom"
                                                                Width="120"
                                                                SelectedDate="{Binding NewExpense.From,  UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>
                                                <StackPanel Margin="5 0 0 0">
                                                    <TextBlock Text="Έως:" />
                                                    <DatePicker VerticalAlignment="Bottom"
                                                                Width="120"
                                                                SelectedDate="{Binding NewExpense.To,  UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Margin=" 5 0 0 0"
                                                        Grid.RowSpan="2"
                                                        Grid.Column="1"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Left">
                                                <TextBlock Text="Αιτιολογία:" />
                                                <TextBox Text="{Binding NewExpense.Reason, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="250"
                                                         AllowDrop="True"
                                                         VerticalScrollBarVisibility="Auto"
                                                         TextWrapping="Wrap"
                                                         Height="70" />
                                            </StackPanel>
                                            <Button Content="Καταχώρηση"
                                                    Grid.Row="1"
                                                    Grid.Column="3"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center"
                                                    Margin="5"
                                                    Width="90"
                                                    Command="{Binding RegisterExpenseCommand}" />
                                            <StackPanel Orientation="Vertical"
                                                        Margin="5 0"
                                                        Grid.Column="2">
                                                <TextBlock Text="Κατηγορία" />
                                                <ComboBox VerticalAlignment="Top"
                                                          Width="90"
                                                          ItemsSource="{Binding MainCategories}"
                                                          DisplayMemberPath="Name"
                                                          SelectedItem="{Binding MainCategory,  UpdateSourceTrigger=PropertyChanged}" />
                                                <TextBlock Text="Υποκατηγορία" />
                                                <ComboBox VerticalAlignment="Top"
                                                          Width="90"
                                                          DisplayMemberPath="Name"
                                                          ItemsSource="{Binding SecondaryCategories}"
                                                          SelectedItem="{Binding NewExpense.SecondaryCategory, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical"
                                                        Margin="5 0"
                                                        Grid.Column="3">
                                                <TextBlock Text="Επιχείριση" />
                                                <ComboBox VerticalAlignment="Top"
                                                          Width="100"
                                                          ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type helpers:Stores}}}"
                                                          SelectedItem="{Binding NewExpense.SelectedStore,  UpdateSourceTrigger=PropertyChanged}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}"
                                                                       HorizontalAlignment="Right"  />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                                <TextBlock Text="Παραστατικό" />
                                                <ComboBox VerticalAlignment="Top"
                                                          Width="100"
                                                          SelectedValue="{Binding NewExpense.Reciept, Mode=TwoWay, Converter={StaticResource BoolToGreekStringConverter}}">
                                                    <ComboBox.Items>
                                                        <ComboBoxItem Content="" />
                                                        <ComboBoxItem Content="ΝΑΙ" />
                                                        <ComboBoxItem Content="ΟΧΙ" />
                                                    </ComboBox.Items>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="3">
                                        <Label Content="Σύνολο Εξόδων:" />
                                        <Label Content="{Binding ExpensesSum, Converter={StaticResource FtoSConverter}}" />
                                        <Label Content="Γενικό Σύνολο:"
                                               Margin="20 0 0 0"
                                               FontWeight="Bold" />
                                        <Label Content="{Binding Total, Converter={StaticResource FtoSConverter}}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Grid.Row="3">
                                        <Label Content="Ταμείο:" />
                                        <Label Content="{Binding Cleanse, Converter={StaticResource FtoSConverter}}" />
                                        <Button Content="Αποθήκευση"
                                                VerticalAlignment="Center"
                                                Margin="5 0"
                                                Command="{Binding SaveChangesCommand}" />
                                    </StackPanel>
                                    <ScrollViewer Grid.Column="1"
                                                  Grid.Row="0"
                                                  d:Visibility="Visible"
                                                  Visibility="{Binding ConverterParameter=1, Converter={StaticResource UserToVisibilityConverter}}"
                                                  VerticalAlignment="Stretch"
                                                  Grid.RowSpan="5"
                                                  Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <GroupBox Header="Τύποι Εξόδων"
                                                      Grid.Row="0"
                                                      Grid.ColumnSpan="2"
                                                      HorizontalAlignment="Left"
                                                      Padding="5"
                                                      VerticalAlignment="Top"
                                                      Margin="0 0">
                                                <StackPanel Orientation="Vertical">
                                                    <Button Content="(Απο)Επιλογή όλων"
                                                            Command="{Binding SelectAllCommand}"
                                                            Margin="0 0 5 5"
                                                            Padding="5 3" />
                                                    <ItemsControl ItemsSource="{Binding ExpenseTypes}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <CheckBox Content="{Binding ExpenseCategory.Name}"
                                                                              IsChecked="{Binding IsChecked}"
                                                                              Margin="5"
                                                                              Width="100"
                                                                              FontSize="14" />
                                                                    <Button Command="{Binding DataContext.ShowEconomicDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                                            CommandParameter="{Binding}"
                                                                            Background="White"
                                                                            BorderBrush="White"
                                                                            Cursor="Hand"
                                                                            Margin="2">
                                                                        <iconPacks:PackIconFontAwesome Kind="ArrowCircleRightSolid"
                                                                                                       Height="13" />
                                                                    </Button>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Vertical" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </GroupBox>
                                            <DataGrid Grid.Row="1"
                                                      Grid.ColumnSpan="2"
                                                      AutoGenerateColumns="False"
                                                      CanUserAddRows="False"
                                                      Margin="0 10"
                                                      CanUserDeleteRows="False"
                                                      Visibility="{Binding AnyDetails, Converter={StaticResource booleanToVisibilityConverter}}"
                                                      ItemsSource="{Binding EconomicDetails}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Υποκατηγορία"
                                                                        Width="122"
                                                                        Binding="{Binding Category.Name}" />
                                                    <DataGridTextColumn Header="Ποσό"
                                                                        Width="70"
                                                                        Binding="{Binding Amount,Converter={StaticResource FtoSConverter}}" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <Label Content="Πάγια:"
                                                   Grid.Row="2"
                                                   Visibility="{Binding Pagia,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Pagia, Converter={StaticResource FtoSConverter}}"
                                                   Grid.Row="2"
                                                   Visibility="{Binding Pagia,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Column="1" />
                                            <Label Content="Μισθοδοσίες:"
                                                   Grid.Row="3"
                                                   Visibility="{Binding Misthoi,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Misthoi, Converter={StaticResource FtoSConverter}}"
                                                   Grid.Row="3"
                                                   Visibility="{Binding Misthoi,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Column="1" />
                                            <Label Content="Έκτακτα:"
                                                   Grid.Row="4"
                                                   Visibility="{Binding Ektakta,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Ektakta, Converter={StaticResource FtoSConverter}}"
                                                   Grid.Row="4"
                                                   Visibility="{Binding Ektakta,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Column="1" />
                                            <Label Content="Σπιτιού:"
                                                   Visibility="{Binding Spitiou,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="5"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Spitiou, Converter={StaticResource FtoSConverter}}"
                                                   Visibility="{Binding Spitiou,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="5"
                                                   Grid.Column="1" />
                                            <Label Content="Γωγώ:"
                                                   Visibility="{Binding Gwgw,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="6"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Gwgw, Converter={StaticResource FtoSConverter}}"
                                                   Visibility="{Binding Gwgw,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="6"
                                                   Grid.Column="1" />
                                            <Label Content="Τιμολόγια:"
                                                   Visibility="{Binding Timologia,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="7"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Timologia, Converter={StaticResource FtoSConverter}}"
                                                   Visibility="{Binding Timologia,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="7"
                                                   Grid.Column="1" />
                                            <Label Content="Πιστωτικά:"
                                                   Visibility="{Binding Pistotika,Converter={StaticResource IntToVisibilityConverter}}"
                                                   Grid.Row="8"
                                                   Grid.Column="0" />
                                            <Label Content="{Binding Pistotika, Converter={StaticResource FtoSConverter}}"
                                                   Visibility="{Binding Pistotika,Converter={StaticResource IntToVisibilityConverter}}"
