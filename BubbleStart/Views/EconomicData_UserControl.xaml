                            <DataGrid ItemsSource="{Binding CustomersExpireInShowUps}"
                                      Grid.Row="1"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      HorizontalAlignment="Left"
                                      CanUserDeleteRows="False"
                                      AutoGenerateColumns="False">
                                <DataGrid.RowStyle>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <EventSetter Event="MouseDoubleClick"
                                                     Handler="ListView_MouseDoubleClick" />
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Όνομα"
                                                        Width="120"
                                                        Binding="{Binding Name}" />
                                    <DataGridTextColumn Header="Επίθετο"
                                                        Width="120"
                                                        Binding="{Binding SureName}" />
                                    <DataGridTextColumn Header="Απομένουν"
                                                        Binding="{Binding RemainingDaysTotal}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>