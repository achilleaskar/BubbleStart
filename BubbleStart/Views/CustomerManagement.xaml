<Window x:Class="BubbleStart.Views.CustomerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Converters="clr-namespace:BubbleStart.Converters"
        xmlns:helpers="clr-namespace:BubbleStart.Helpers"
        xmlns:enum="clr-namespace:BubbleStart.Helpers"
        xmlns:models="clr-namespace:BubbleStart.Model"
        d:DataContext="{d:DesignInstance models:Customer}"
        mc:Ignorable="d"
        Loaded="Window_ContentRendered"
        Closing="Window_Closing"
        KeyUp="Window_KeyUp"
        Width="1500"
        WindowState="Maximized"
        Background="White"
        d:DesignHeight="1050"
        d:DesignWidth="1510">
    <Window.Resources>
        <Converters:DateTimeToString x:Key="DateTimeToString" />
        <Converters:DoubleParameterConverter x:Key="DoubleParameterConverter" />
        <Converters:FloadToStringValueConverter x:Key="FtoSConverter" />
        <Converters:RemainingAmountToColorConverter x:Key="RemainingAmountToColorConverter" />
        <Converters:BoolToPaidConverter x:Key="BoolToShowedUp_Converter" />
        <Converters:MeetingsToColorConverter x:Key="MeetingsToColorConverter" />
        <Converters:ClothToColorConverter x:Key="ClothToColorConverter" />
        <Converters:RowToIndexConverter x:Key="RowToIndexConverter" />
        <Converters:EnumConverter x:Key="EnumConverter" />
        <Style x:Key="DataGridCellStyle"
               TargetType="{x:Type DataGridCell}">
            <Setter Property="IsTabStop"
                    Value="False" />
        </Style>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="FontSize"
                    Value="14" />
        </Style>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Popup Name="PopupFinish"
                   IsOpen="{Binding PopupFinishOpen}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="150"
                   Placement="Center">
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Padding="5 17 5 5 "
                        Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ComboBox  ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type helpers:BodyPart}}}"
                                   Margin="5"
                                   VerticalAlignment="Top"
                                   SelectedItem="{Binding SelectedBodyPart,UpdateSourceTrigger=PropertyChanged}" />
                        <ItemsControl ItemsSource="{Binding SecBodyParts}"
                                      Grid.Row="1"
                                      IsEnabled="{Binding CanAdd}"
                                      Margin="5 0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding SecBodyPart, Converter={StaticResource EnumConverter}}"
                                              IsChecked="{Binding Selected}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="2"
                                    Margin="5 5 5 20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom">
                            <Button Content="ΟΚ"
                                    Margin="5"
                                    Padding="5"
                                    Command="{Binding CustomerLeftCommand}" />
                            <Button Content="Άκυρο"
                                    Margin="5"
                                    Padding="5"
                                    Click="CloseButton_Click" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Popup>
            <Popup Name="Popup1"
                   IsOpen="{Binding Popup1Open}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Placement="Mouse">
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Padding="5 17 5 5 "
                        Background="LightBlue">
                    <Grid>
                        <TextBlock Foreground="Red"
                                   FontSize="11"
                                   Text="Press ESC or X to close"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="-2 -16 0 0" />
                        <Button Foreground="Red"
                                Click="Button_Click2"
                                Margin=" 0 -15 -2 0"
                                VerticalContentAlignment="Center"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right">
                            <TextBlock Text="x"
                                       Margin="4 -3 4 0" />
                        </Button>
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=PilFunToggle}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Functional"
                                    Width="120"
                                    Click="Button_Click2"
                                    Command="{Binding AddOldShowUpCommand}"
                                    CommandParameter="60"
                                    Margin="5" />
                            <Button Content="Pilates"
                                    Click="Button_Click2"
                                    CommandParameter="64"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="Yoga"
                                    Width="100"
                                    Click="Button_Click"
                                    Command="{Binding AddOldShowUpCommand}"
                                    CommandParameter="65"
                                    Margin="5" />
                        </StackPanel>
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=PilFunToggle}"
                                                     Value="True">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Functional"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    CommandParameter="0"
                                    Margin="5" />
                            <Button Content="Pilates"
                                    CommandParameter="4"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <ToggleButton Content="Pilates-Functional"
                                          Width="120"
                                          Name="PilFunToggle"
                                          Margin="5" />
                            <Button Content="Massage"
                                    Width="120"
                                    CommandParameter="1"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="Online"
                                    CommandParameter="2"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="OutDoor"
                                    CommandParameter="3"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="Yoga"
                                    CommandParameter="5"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="Aerial Yoga"
                                    CommandParameter="7"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="Personal"
                                    CommandParameter="8"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <Button Content="Medical"
                                    CommandParameter="9"
                                    Width="120"
                                    Command="{Binding AddOldShowUpCommand}"
                                    Margin="5" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <RadioButton Content="30'"
                                             IsChecked="{Binding Is30min}"
                                             VerticalAlignment="Center"
                                             GroupName="is30or60" />
                                <RadioButton Content="60'"
                                             IsChecked="True"
                                             VerticalAlignment="Center"
                                             GroupName="is30or60" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Popup>
            <Grid Margin="5 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.ColumnSpan="3">
                    <Label Content="Ονοματεπώνυμο:"
                           Grid.Row="0"
                           Grid.Column="0" />
                    <TextBlock Text="{Binding FullName}"
                               MouseRightButtonUp="TextBlock_MouseRightButtonUp"
                               Grid.Row="0"
                               Grid.Column="1"
                               Margin="0,5,0,4" />
                </StackPanel>
                <Grid Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Τηλέφωνο:" />
                    <TextBlock Text="{Binding Tel}"
                               HorizontalAlignment="Left"
                               Grid.Column="1"
                               Margin="0,4" />
                    <StackPanel Orientation="Horizontal"
                                Grid.Column="2"
                                HorizontalAlignment="Right">
                        <Label Content="Id:" />
                        <TextBlock Text="{Binding Id}"
                                   Margin="0 4 5  4" />
                    </StackPanel>
                </Grid>
                <Separator Grid.Row="2"
                           Margin="-4 0"
                           Grid.ColumnSpan="3" />
                <Label Content="Ενεργή συνδρομή:"
                       Grid.Row="3"
                       Grid.Column="0" />
                <TextBlock Text="{Binding Active}"
                           Grid.Row="3"
                           Grid.Column="1"
                           Margin="0,4" />
                <Button Content="Παλιά"
                        Command="{Binding ShowPreviusDataCommand}"
                        Grid.Column="1"
                        Grid.Row="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="4" />
                <StackPanel Orientation="Horizontal"
                            Grid.Row="4"
                            Margin="5 0 0 5"
                            Grid.ColumnSpan="2">
                    <StackPanel>
                        <Label Content="Απομένουν(φορές):"
                               Margin="0 0 -20 0" />
                        <TextBlock Text="Gym"
                                   Margin="5 0 5 5" />
                        <TextBlock Text="Massage"
                                   Margin="5 0" />
                        <TextBlock Text="Online"
                                   Margin="5" />
                        <TextBlock Text="OutDoor"
                                   Margin="5 0" />
                        <TextBlock Text="Yoga"
                                   Margin="5 5 5 0" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label Content="" />
                        <TextBlock Text="{Binding RemainingTrainingFullDays}"
                                   HorizontalAlignment="Left"
                                   Margin="5 0 5 5" />
                        <TextBlock Text="{Binding RemainingMassageDays}"
                                   HorizontalAlignment="Left"
                                   Margin="5 0" />
                        <TextBlock Text="{Binding RemainingOnlineDays}"
                                   HorizontalAlignment="Left"
                                   Margin="5" />
                        <TextBlock Text="{Binding RemainingOutDoorDays}"
                                   HorizontalAlignment="Left"
                                   Margin="5 0" />
                        <TextBlock Text="{Binding RemainingYogaFullDays}"
                                   HorizontalAlignment="Left"
                                   Margin="5 5 5 0" />
                    </StackPanel>
                    <StackPanel Margin="20 0 0 0"
                                HorizontalAlignment="Right">
                        <CheckBox Content="Εμβόλιο"
                                  Margin="0 0 5 0"
                                  VerticalAlignment="Top"
                                  IsChecked="{Binding Vacinated}" />
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Νόσηση"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding CertifOfIllness}" />
                            <DatePicker Margin="5 0 0 0"
                                        FontSize="11"
                                        Width="80"
                                        SelectedDate="{Binding IllDate}" />
                        </StackPanel>
                        <CheckBox Content="Ανεμβολίαστος"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding Psek}" />
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Χαρτί Γιατ."
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding Doctor}" />
                            <DatePicker Margin="5 0 0 0"
                                        FontSize="11"
                                        Width="80"
                                        SelectedDate="{Binding DoctorDate}" />
                        </StackPanel>
                        <CheckBox Content="3η δόση"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding ThirdDose}" />
                        <CheckBox Content="Μαλιαρόπουλος"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding Maliar}" />
                        <CheckBox Content="Google *"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding Google}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ημ. Εκαθ.:"
                                       Margin="0 5 5 5" />
                            <DatePicker SelectedDate="{Binding ResetDate,UpdateSourceTrigger=PropertyChanged}"
                                        Name="ResetDayPicker"
                                        VerticalAlignment="Center"
                                        Width="90" />
                            <Button Click="Button_Click"
                                    VerticalAlignment="Center"
                                    Margin="5 0">
                                <iconPacks:PackIconFontAwesome Kind="ArrowDownSolid" />
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mass Εκαθ.:"
                                       Margin="0 5 5 5" />
                            <DatePicker SelectedDate="{Binding MassageResetDay,UpdateSourceTrigger=PropertyChanged}"
                                        Name="MassageResetDayPicker"
                                        VerticalAlignment="Center"
                                        Width="90" />
                            <Button Click="Button_ClickMass"
                                    VerticalAlignment="Center"
                                    Margin="5 0">
                                <iconPacks:PackIconFontAwesome Kind="ArrowDownSolid" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <!--Background="{Binding ,ConverterParameter={Binding RemainingAmount}, Converter={StaticResource MeetingsToColorConverter}}"-->
                <Label Content="Προεπιλεγ. τύπος Πακέτου:"
                       Grid.Row="5"
                       Grid.Column="0" />
                <ComboBox Grid.Row="5"
                          Grid.Column="1"
                          Margin="0,4"
                          SelectedItem="{Binding SelectedDefaultProgram}"
                          ItemsSource="{Binding DefaultPrograms}"
                          Width="110">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding Selected,UpdateSourceTrigger=PropertyChanged}"
                                          Width="20" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Τύπος Ενεργού Πακέτου:"
                       Grid.Row="6"
                       Grid.Column="0" />
                <TextBlock Text="{Binding TypeOfProgram }"
                           Grid.Row="6"
                           Grid.Column="1"
                           Margin="0,4" />
                <Label Content="Επίπεδο:"
                       Grid.Row="7"
                       Grid.Column="0" />
                <ComboBox Grid.Row="7"
                          Grid.Column="1"
                          Margin="0,4"
                          SelectedIndex="{Binding Rating}"
                          Width="110">
                    <ComboBoxItem>Χωρίς</ComboBoxItem>
                    <ComboBoxItem>Αρχάριος</ComboBoxItem>
                    <ComboBoxItem>Μέτριο</ComboBoxItem>
                    <ComboBoxItem>Προχωρημένος</ComboBoxItem>
                </ComboBox>
                <Label Content="Υπόλοιπο:"
                       Grid.Row="8"
                       Margin="0"
                       Padding="5 5 5 0"
                       d:Visibility="Visible"
                       Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}"
                       Grid.Column="0" />
                <TextBlock Text="{Binding RemainingAmount, StringFormat=c1}"
                           Grid.Row="8"
                           d:Visibility="Visible"
                           Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}"
                           Grid.Column="1"
                           Margin="0,4,0,0" />
                <StackPanel Grid.Row="9"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Grid.ColumnSpan="2"
                            d:Visibility="Visible"
                            Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}">
                    <GroupBox Header="Αγορά πακέτου">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="Τύπος:"
                                               HorizontalAlignment="Left" />
                                    <ComboBox VerticalAlignment="Top"
                                              Width="125"
                                              HorizontalAlignment="Left"
                                              Height="24"
                                              ItemsSource="{Binding BasicDataManager.ProgramTypes}"
                                              SelectedItem="{Binding SelectedProgramType, UpdateSourceTrigger=PropertyChanged}"
                                              Margin="0" />
                                </StackPanel>
                                <StackPanel Margin="5 0 0 0"
                                            VerticalAlignment="Top">
                                    <TextBlock Text="Συνεδ.:"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center" />
                                    <TextBox  Height="23"
                                              VerticalContentAlignment="Center"
                                              Width="30"
                                              Text="{Binding NumOfShowUps,  UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <StackPanel Margin="5 0 0 0"
                                            VerticalAlignment="Top">
                                    <TextBlock Text="Μήνες:"
                                               HorizontalAlignment="Left" />
                                    <ComboBox  Height="23"
                                               Width="36"
                                               ItemsSource="{x:Static helpers:StaticResources.Months}"
                                               SelectedItem="{Binding ProgramDuration,  UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1"
                                        Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="Αγορά Πακέτου:" />
                                    <DatePicker SelectedDate="{Binding DateOfIssue,  UpdateSourceTrigger=PropertyChanged}"
                                                Width="120" />
                                </StackPanel>
                                <StackPanel Margin="5 0">
                                    <TextBlock Text="1η συνεδρία" />
                                    <DatePicker SelectedDate="{Binding StartDate,  UpdateSourceTrigger=PropertyChanged}"
                                                Width="120" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal">
                                <StackPanel Margin="0 0 0 5"
                                            VerticalAlignment="Bottom">
                                    <TextBlock Text="Τιμή Συν.:"
                                               HorizontalAlignment="Left" />
                                    <TextBox Text="{Binding ShowUpPrice,Converter={StaticResource FtoSConverter}, UpdateSourceTrigger=PropertyChanged}"
                                             Height="20"
                                             VerticalContentAlignment="Center"
                                             Width="40" />
                                </StackPanel>
                                <StackPanel Margin="7 0 0 5"
                                            VerticalAlignment="Bottom">
                                    <TextBlock Text="Σύνολο:"
                                               HorizontalAlignment="Left" />
                                    <TextBox Text="{Binding ProgramPrice,Converter={StaticResource FtoSConverter}, UpdateSourceTrigger=PropertyChanged}"
                                             Height="20"
                                             VerticalContentAlignment="Center"
                                             Width="36" />
                                </StackPanel>
                                <Button Content="Πίστωση"
                                        VerticalAlignment="Bottom"
                                        CommandParameter="0"
                                        Width="55"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        Command="{Binding BookCommand}" />
                            </StackPanel>
                            <StackPanel Grid.Row="3"
                                        Orientation="Horizontal">
                                <StackPanel Margin="7 0 0 5"
                                            VerticalAlignment="Bottom">
                                    <TextBlock Text="Απόδ.:"
                                               HorizontalAlignment="Left" />
                                    <CheckBox IsChecked="{Binding ProgramReciept, UpdateSourceTrigger=PropertyChanged}"
                                              Height="20"
                                              HorizontalAlignment="Center"
                                              VerticalContentAlignment="Center" />
                                </StackPanel>
                                <StackPanel Margin="7 0 0 5"
                                            VerticalAlignment="Bottom">
                                    <TextBlock Text="Τρόπος:"
                                               HorizontalAlignment="Left" />
                                    <ComboBox VerticalAlignment="Center"
                                              ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type helpers:PaymentType}}}"
                                              SelectedItem="{Binding ProgramPaymentType,UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <Button Content="Αγορά"
                                        Margin="5 5 0 5"
                                        Width="55"
                                        HorizontalAlignment="Center"
                                        Command="{Binding BookCommand}"
                                        CommandParameter="1"
                                        VerticalAlignment="Bottom" />
                            </StackPanel>
                            <GroupBox Grid.Row="4"
                                      Visibility="{Binding PaymentVisibility}"
                                      Header="Πληρωμή Δόσης / Εξόφληση">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel>
                                            <TextBlock Text="Ημερομηνία Πληρωμής:" />
                                            <DatePicker SelectedDate="{Binding DateOfPayment,  UpdateSourceTrigger=PropertyChanged}"
                                                        Width="120" />
                                        </StackPanel>
                                        <StackPanel Margin="7 0 0 5"
                                                    VerticalAlignment="Bottom">
                                            <TextBlock Text="Ποσό:"
                                                       HorizontalAlignment="Left" />
                                            <TextBox Text="{Binding PaymentAmount,Converter={StaticResource FtoSConverter}, StringFormat=c1, UpdateSourceTrigger=PropertyChanged}"
                                                     Height="20"
                                                     Width="36" />
                                        </StackPanel>
                                        <StackPanel Margin="7 0 0 5"
                                                    VerticalAlignment="Bottom">
                                            <TextBlock Text="Απ.:"
                                                       HorizontalAlignment="Left" />
                                            <CheckBox IsChecked="{Binding PaymentReciept, UpdateSourceTrigger=PropertyChanged}"
                                                      Height="20"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                        </StackPanel>
                                        <StackPanel Margin="7 0 0 5"
                                                    VerticalAlignment="Bottom">
                                            <TextBlock Text="Τρόπος:"
                                                       HorizontalAlignment="Left" />
                                            <ComboBox VerticalAlignment="Center"
                                                      ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type helpers:PaymentType}}}"
                                                      SelectedItem="{Binding PaymentType}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Επόμενη Δόση:" />
                                        <TextBlock Text="{Binding NextPayment,StringFormat=c1}" />
                                        <Button Content="Πληρωμή"
                                                Margin="5"
                                                VerticalAlignment="Bottom"
                                                Command="{Binding PaymentCommand}" />
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <TextBlock Grid.Row="5"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Width="250"
                                       Foreground="red"
                                       Text="{Binding ProgramResult}" />
                        </Grid>
                    </GroupBox>
                </StackPanel>
                <!--<GroupBox Grid.Row="10"
                              Width=" 330"
                              HorizontalAlignment="Left"
                              Grid.ColumnSpan="2"
                              Header="Εισαγωγή Πληρωμής">
                        <Grid Margin="0 -3 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1"
                                        HorizontalAlignment="Right"
                                        Grid.ColumnSpan="2"
                                        Grid.Column="0">
                                <TextBlock Text="Ποσό:" />
                                <TextBox Text="{Binding PaymentAmount, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}"
                                         Width="30"
                                         Margin="5 0" />
                                <Button Content="Πληρωμή"
                                        VerticalAlignment="Center"
                                        Command="{Binding PaymentCommand}" />
                            </StackPanel>
                            -->
                <!--<TextBlock Grid.Row="3"
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Width="300"
                                       Foreground="red"
                                       Text="{Binding ProgramResult}" />-->
                <!--
                        </Grid>
                    </GroupBox>-->
                <GroupBox Grid.Row="10"
                          Grid.ColumnSpan="2"
                          HorizontalAlignment="Left"
                          d:Visibility="Visible"
                          Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}"
                          Header="Προσθήκη Παρουσίας">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Ημερομ.:" />
                        <DatePicker SelectedDate="{Binding OldShowUpDate,UpdateSourceTrigger=PropertyChanged}"
                                    Width="98" />
                        <Button Command="{Binding OpenPopup1Command}"
                                Content="Προσθήκη"
                                Margin="5 0 5 0"
                                VerticalAlignment="Center" />
                    </StackPanel>
                </GroupBox>
            </Grid>
            <Grid Grid.Column="1"
                  Grid.RowSpan="4"
                  d:Visibility="Visible">
                <TabControl Padding="5"
                            Name="Tabs"
                            VerticalAlignment="Top"
                            Margin="5 0">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
