                                                              CommandParameter="{Binding Converter={StaticResource DoubleParameterConverter},ConverterParameter=3}"
                                                              Command="{Binding DataContext.ToggleShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    <MenuItem Header="Yoga"
                                                              CommandParameter="{Binding Converter={StaticResource DoubleParameterConverter},ConverterParameter=5}"
                                                              Command="{Binding DataContext.ToggleShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    <MenuItem Header="Aerial Yoga"
                                                              CommandParameter="{Binding Converter={StaticResource DoubleParameterConverter},ConverterParameter=7}"
                                                              Command="{Binding DataContext.ToggleShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    <MenuItem Header="Personal"
                                                              CommandParameter="{Binding Converter={StaticResource DoubleParameterConverter},ConverterParameter=8}"
                                                              Command="{Binding DataContext.ToggleShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    <MenuItem Header="Medical"
                                                              CommandParameter="{Binding Converter={StaticResource DoubleParameterConverter},ConverterParameter=9}"
                                                              Command="{Binding DataContext.ToggleShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                </MenuItem>
                                                <MenuItem Header="Ήρθε/Δεν ήρθε"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.ToggleRealCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                <MenuItem Header="30'/60'"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.Toggle30_60Command,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                <MenuItem Header="Δώρο Ναί/Όχι'"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.ToggleIsPresentCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                <MenuItem Header="Online Ναί/Όχι'"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.ToggleIsTestCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                            </ContextMenu>
                                        </DataGrid.Resources>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="{x:Type DataGridRow}"
                                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                                <Setter Property="ContextMenu"
                                                        Value="{StaticResource ShowUpsSubMenu}" />
                                                <Setter Property="Background"
                                                        Value="{Binding Color}" />
                                                <Setter Property="IsSelected"
                                                        Value="{Binding IsSelected, Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
                                                <EventSetter Event="MouseLeftButtonUp"
                                                             Handler="DataGridRow_MouseLeftButtonUp" />
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="#">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{Binding RealColor}">
                                                            <TextBlock Text="{Binding Count}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Ημέρα"
                                                                    Width="18"
                                                                    MinWidth="10">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Margin="1 0"
                                                                   Text="{Binding Arrived,ConverterParameter='ddd', Converter={StaticResource DateTimeToString}}">
                                                            <TextBlock.ToolTip>
                                                                <TextBlock Text="{Binding Arrived,ConverterParameter='dddd', Converter={StaticResource DateTimeToString}}" />
                                                            </TextBlock.ToolTip>
                                               </TextBlock>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Ημερομηνία"
                                                                Width="86"
                                                                Binding="{Binding Arrived,ConverterParameter='d/MM/yy HH:mm', Converter={StaticResource DateTimeToString}}" />
                                            <DataGridTemplateColumn Header=""
                                                                    Width="22">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text"
                                                                            Value="60'" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Is30min}"
                                                                                     Value="True">
                                                                            <Setter Property="Text"
                                                                                    Value="30'" />
                                                                            <Setter Property="Background"
                                                                                    Value="Yellow" />
                                                                            <Setter Property="Foreground"
                                                                                    Value="Black" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style></TextBlock>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                <GroupBox Header="Σεμινάρια"
                                          VerticalAlignment="Stretch">
                                    <DataGrid ItemsSource="{Binding ProgramsAerialYogaCollectionView}"
                                              VerticalAlignment="Stretch"
                                              CanUserAddRows="False"
                                              SelectedItem="{Binding SelectedProgramAerialYogaToDelete}"
                                              VirtualizingPanel.VirtualizationMode="Standard"
                                              EnableRowVirtualization="False"
                                              SelectionChanged="Showups_SelectionChanged"
                                              Width="750"
                                              CellEditEnding="DataGrid_CellEditEnding"
                                              CanUserDeleteRows="False"
                                              AutoGenerateColumns="False">
                                        <DataGrid.Resources>
                                            <ContextMenu x:Key="ProgramsSubMenu">
                                                <MenuItem Header="Διαγραφή"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.DeleteProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                                    <MenuItem.Icon>
                                                        <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Πιστόλι"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.GunProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                                    <MenuItem.Icon>
                                                        <iconPacks:PackIconFontAwesome Kind="RunningSolid" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Χάρισμα"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.GiftProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                                    <MenuItem.Icon>
                                                        <iconPacks:PackIconFontAwesome Kind="GiftSolid" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </DataGrid.Resources>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="{x:Type DataGridRow}"
                                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                                <Setter Property="ContextMenu"
                                                        Value="{StaticResource ProgramsSubMenu}" />
                                                <Setter Property="Background"
                                                        Value="{Binding Color}" />
                                                <Setter Property="IsSelected"
                                                        Value="{Binding IsSelected, Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
                                                <EventSetter Event="MouseLeftButtonUp"
                                                             Handler="DataGridRow_MouseLeftButtonUp" />
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Έναρξη"
                                                                Width="60"
                                                                Binding="{Binding StartDay,ConverterParameter='d/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                            <DataGridTemplateColumn Header="Τύπος"
                                                                    Width="250">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox ItemsSource="{Binding DataContext.BasicDataManager.ProgramTypes,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}"
                                                                  SelectedItem="{Binding ProgramTypeO,UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Συν."
                                                                Width="30"
                                                                Binding="{Binding Showups}" />
                                            <DataGridTextColumn Header="Μήνες"
                                                                Width="35"
                                                                Binding="{Binding Months,UpdateSourceTrigger=PropertyChanged}" />
                                            <DataGridTextColumn Header="Τιμή Συν."
                                                                Width="55"
                                                                IsReadOnly="true"
                                                                Binding="{Binding ShowUpPrice,StringFormat=c}" />
                                            <DataGridTextColumn Header="Σύνολο"
                                                                Width="55"
                                                                Binding="{Binding Amount,StringFormat=c}" />
                                            <DataGridTextColumn Header="Αγορά"
                                                                Width="60"
                                                                Binding="{Binding DayOfIssue,ConverterParameter='d/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                            <DataGridTemplateColumn Header="Πληρωμή"
                                                                    Width="60">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border>
                                                            <TextBlock Text="{Binding Paid, Converter={StaticResource BoolToShowedUp_Converter}}">
                                                                <TextBlock.Style>
                                                                    <Style>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding PaidCol}"
                                                                                         Value="true">
                                                                                <Setter Property="TextBlock.Background"
                                                                                        Value="LightGreen" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding PaidCol}"
                                                                                         Value="false">
                                                                                <Setter Property="TextBlock.Background"
                                                                                        Value="#FFE67979" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Gun}"
                                                                                         Value="true">
                                                                                <Setter Property="TextBlock.Background"
                                                                                        Value="HotPink" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Gift}"
                                                                                         Value="true">
                                                                                <Setter Property="TextBlock.Background"
                                                                                        Value="LightBlue" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style></TextBlock>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Deal"
                                                                    Width="150">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox ItemsSource="{Binding DataContext.BasicDataManager.Deals,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}"
                                                                  DisplayMemberPath="Name"
                                                                  SelectedItem="{Binding Deal,UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                <GroupBox Header="Πληρωμές Σεμιναρίων"
                                          Grid.Column="3"
                                          Grid.RowSpan="30"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Left">
                                    <DataGrid ItemsSource="{Binding PaymentsAerialYogaCollectionView}"
                                              VerticalAlignment="Stretch"
                                              SelectedItem="{Binding SelectedAerialYogaPayment}"
                                              CanUserAddRows="False"
                                              VirtualizingPanel.VirtualizationMode="Standard"
                                              EnableRowVirtualization="False"
                                              SelectionChanged="Showups_SelectionChanged"
                                              CanUserDeleteRows="False"
                                              AutoGenerateColumns="False">
                                        <DataGrid.Resources>
                                            <ContextMenu x:Key="PaymentsSubMenu">
                                                <MenuItem Header="Διαγραφή"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.DeletePaymentCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                                    <MenuItem.Icon>
                                                        <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Σύνδεση με πακέτο"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.SetToProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                <MenuItem Header="Αποσύνδεση"
                                                          CommandParameter="{Binding}"
                                                          Command="{Binding DataContext.ReleasePaymentCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                            </ContextMenu>
                                        </DataGrid.Resources>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="{x:Type DataGridRow}"
                                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                                <Setter Property="ContextMenu"
                                                        Value="{StaticResource PaymentsSubMenu}" />
                                                <Setter Property="Background"
                                                        Value="{Binding PaymentColor}" />
                                                <Setter Property="IsSelected"
                                                        Value="{Binding IsSelected, Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
                                                <EventSetter Event="MouseLeftButtonUp"
                                                             Handler="DataGridRow_MouseLeftButtonUp" />
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ημερομ."
                                                                Width="55"
                                                                Binding="{Binding Date,ConverterParameter='d/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                            <DataGridTextColumn Header="Ποσό"
                                                                Width="45"
                                                                Binding="{Binding Amount,StringFormat=c1}" />
                                            <DataGridCheckBoxColumn Header="Απ."
                                                                    Width="25"
                                                                    Binding="{Binding Reciept}" />
                                            <DataGridTemplateColumn Header="Τύπος"
                                                                    Width="80"
                                                                    CellStyle="{StaticResource DataGridCellStyle}">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox VerticalAlignment="Center"
                                                                  ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type helpers:PaymentType}}}"
                                                                  SelectedItem="{Binding PaymentType,UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
            <TabControl Grid.Row="2"
                        VerticalAlignment="Top"
                        Margin="5 0 0 0">
                <TabItem Header="Notes"
                         d:Visibility="Visible"
                         Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}">
                    <TextBox Height="210"
                             TextWrapping="Wrap"
                             FontSize="13"
                             Width="320"
                             Name="Notes"
                             MaxLength="1000"
                             MaxLines="200"
                             d:Visibility="Visible"
                             Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}"
                             AcceptsReturn="True"
                             Text="{Binding Notes,UpdateSourceTrigger=PropertyChanged}" />
                </TabItem>
                <TabItem Header="Ρούχα">
                    <StackPanel Height="210">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="80"
                                      Margin="5 5 0 5"
                                      SelectedItem="{Binding SelectedItem}"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding BasicDataManager.ItemsList}"
                                      DisplayMemberPath="Name" />
                            <ComboBox Width="55"
                                      SelectedItem="{Binding SelectedSize}"
                                      Margin="5 0 "
                                      ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type enum:SizeEnum}}}"
                                      VerticalAlignment="Center" />
                            <TextBox Width="30"
                                     Text="{Binding ClothPrice,Converter={StaticResource FtoSConverter}}"
                                     Margin="0 0 5 0"
                                     Height="22"
                                     VerticalContentAlignment="Center" />
                            <CheckBox Content="Free"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ClothFree}"
                                      Margin="5" />
                            <Button Content="Add"
                                    Padding="5 0"
                                    Height="22"
                                    Command="{Binding AddItemCommand}"
                                    VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Χρώμα:"
                                   VerticalAlignment="Center" />
                            <TextBox Width="255"
                                     Text="{Binding ClothColorString}"
                                     Margin="0 5 5 5"
                                     VerticalAlignment="Top" />
                        </StackPanel>
                        <DataGrid ItemsSource="{Binding Items}"
                                  CanUserAddRows="False"
                                  VerticalAlignment="Stretch"
                                  CanUserDeleteRows="False"
                                  Height="175"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="ItemsCM">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeleteItemCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}"
                                              CommandParameter="{Binding}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource ItemsCM}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ρούχο"
                                                    Width="57"
                                                    Binding="{Binding Item.Name}" />
                                <DataGridTextColumn Header="No"
                                                    Binding="{Binding Size}" />
                                <DataGridTextColumn Header="Ημερ."
                                                    Binding="{Binding Date,ConverterParameter='d/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridCheckBoxColumn Binding="{Binding Free}"
                                                        Header="Free" />
                                <DataGridTextColumn Header="Τιμή"
                                                    Width="50"
                                                    Binding="{Binding Price,StringFormat=C2}" />
                                <DataGridTextColumn Header="Χρώμα"
                                                    Width="50"
                                                    Binding="{Binding ColorString,StringFormat=C2}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Ιστορικό Ραντεβού">
                    <StackPanel Height="210">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Από:" />
                            <DatePicker SelectedDate="{Binding HistoryFrom}" />
                            <Button Content="Προβολή"
                                    Padding="5 0"
                                    Height="22"
                                    Command="{Binding ShowHistoryCommand}"
                                    VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Width='397'>
                            <DataGrid ItemsSource="{Binding OldShowUps}"
                                      Width="195"
                                      CanUserAddRows="False"
                                      VerticalAlignment="Stretch"
                                      CanUserDeleteRows="False"
                                      Height="175"
                                      VirtualizingPanel.VirtualizationMode="Standard"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Ημέρα"
                                                            Width="18"
                                                            MinWidth="10">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="1 0"
                                                           Text="{Binding Arrived,ConverterParameter='ddd', Converter={StaticResource DateTimeToString}}">
                                                    <TextBlock.ToolTip>
                                                        <TextBlock Text="{Binding Arrived,ConverterParameter='dddd', Converter={StaticResource DateTimeToString}}" />
                                                    </TextBlock.ToolTip>
      </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Ημερ."
                                                        Width="88"
                                                        Binding="{Binding AppointmentTime,ConverterParameter='dd/MM/yy hh:mm', Converter={StaticResource DateTimeToString}}" />
                                    <DataGridTextColumn Header="Τύπος"
                                                        Width="115"
                                                        Binding="{Binding Description}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <DataGrid ItemsSource="{Binding NextAppointments}"
                                      CanUserAddRows="False"
                                      Width="195"
                                      VerticalAlignment="Stretch"
                                      CanUserDeleteRows="False"
                                      Height="175"
                                      Margin="5 0 0 0"
                                      VirtualizingPanel.VirtualizationMode="Standard"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Ημέρα"
                                                            Width="18"
                                                            MinWidth="10">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="1 0"
                                                           Text="{Binding DayString}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Ημερ."
                                                        Width="88"
                                                        Binding="{Binding TimeString}" />
                                    <DataGridTextColumn Header="Τύπος"
                                                        Binding="{Binding Description}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Αλλαγές">
                    <DataGrid ItemsSource="{Binding Changes}"
                              VerticalAlignment="Top"
                              CanUserAddRows="False"
                              Height="185"
                              d:Visibility="Visible"
                              Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedChange}"
                              VirtualizingPanel.VirtualizationMode="Standard"
                              CanUserDeleteRows="False"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Ημερομ."
                                                    SortMemberPath="Date"
                                                    SortDirection="Descending"
                                                    Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock VerticalAlignment="Top"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Text="{Binding Date,ConverterParameter='d/MM/yyyy hh:mm', Converter={StaticResource DateTimeToString}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Χρήστ."
                                                Width="45"
                                                Binding="{Binding User.Name}" />
                            <DataGridTextColumn Header="Τύπος"
                                                Width="47"
                                                Binding="{Binding Type}" />
                            <DataGridTemplateColumn Header="Περιγραφή"
                                                    Width="230">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Width="Auto"
                                                   VerticalAlignment="Top"
                                                   TextWrapping="Wrap"
                                                   MaxHeight="80"
                                                   Text="{Binding Description}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Σύνολα"
                         d:Visibility="Visible"
                         Visibility="{Binding ConverterParameter=1a, Converter={StaticResource UserToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Content="Σύνολα"
                                Margin="5"
                                HorizontalAlignment="Left"
                                Command="{Binding ShowSumsCommand}" />
                        <DataGrid ItemsSource="{Binding PaymentSums}"
                                  CanUserAddRows="False"
                                  VerticalAlignment="Stretch"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="None"
                                  HorizontalAlignment="Left"
                                  Grid.Row="1"
                                  Height="145"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Year}"
                                                    Width="40" />
                                <DataGridTextColumn  Binding="{Binding Amount,Converter={StaticResource FtoSConverter}}"
                                                     Width="50" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
            <Grid Grid.Row="3">
                <Button Content="Αποθήκευση αλλαγών"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="5"
                        Padding="5 2"
                        Command="{Binding SaveChangesAsyncCommand}" />
                <!--<Button Content="Ακύρωση αλλαγών"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="0 5"
                        Command="{Binding CancelChangesAsyncCommand}" />-->
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>